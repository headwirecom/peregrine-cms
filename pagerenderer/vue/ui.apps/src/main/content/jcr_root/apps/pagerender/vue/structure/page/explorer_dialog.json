{ "fields":[
  {
    "type": "input",
    "inputType": "text",
    "model": "name",
    "label": "Name",
    "readonly": true,
    "placeholder": "page name"
  },
  {
    "type": "input",
    "inputType": "text",
    "model": "title",
    "x-model": "jcr:title",
    "label": "Title",
    "placeholder": "page title"
  },
  {
    "type": "material-select",
    "label": "Sprache",
    "model": "siteLanguage",
    "visible": "model.path.split('/').includes('templates')",
    "selectOptions": {
      "name": "name",
      "value": "value"
    },
    "values": [
      { "name": "Deutsch", "value": "de-DE" },
      { "name": "English", "value": "en-EN" },
      { "name": "Português", "value": "pt-PT" },
      { "name": "Español", "value": "es-ES" },
      { "name": "From Template", "value": "fromTemplate"}
    ],
    "hint": "The name of the scheme used to make the request."
  },
  {
    "type": "material-datetime",
    "inputType": "text",
    "model": "created",
    "label": "Created",
    "readonly": true,
    "placeholder": "created"
  },
  {
    "type": "input",
    "inputType": "text",
    "model": "createdBy",
    "label": "Created By",
    "readonly": true,
    "placeholder": "created by"
  },
  {
    "type": "material-datetime",
    "inputType": "text",
    "model": "lastModified",
    "label": "Last Modified",
    "readonly": true,
    "placeholder": "lastModified"
  },
  {
    "type": "input",
    "inputType": "text",
    "model": "lastModifiedBy",
    "label": "Last Modified By",
    "readonly": true,
    "placeholder": "lastModifiedBy"
  },
  {
    "type": "material-multiselect",
    "model": "tags",
    "label": "Tags",
    "placeholder": "tags",
    "selectOptions": {
      "multiple": true,
      "trackBy": "name",
      "label": "name",
      "searchable": true,
      "clearOnSelect": true,
      "closeOnSelect": false,
      "taggable": true
    },
    "valuesFrom": "/content/objects/tags.infinity.json"
  },
  {
    "type": "material-textarea",
    "inputType": "text",
    "model": "description",
    "label": "Description",
    "rows": 10,
    "placeholder": "enter a description for this page"
  }
]}
