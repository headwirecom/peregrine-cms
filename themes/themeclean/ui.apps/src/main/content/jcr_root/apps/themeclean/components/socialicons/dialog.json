{
	"fields": [
		{
			"type": "materialswitch",
			"textOn": "yes",
			"textOff": "no",
			"valueOn": "true",
			"valueOff": "false",
			"placeholder": "iconcustomcolor",
			"label": "Custom Icons Color",
			"model": "iconcustomcolor"
		},
		{
			"type": "input",
			"inputType": "color",
			"placeholder": "iconcolor",
			"label": "Icon Color",
			"model": "iconcolor",
			"visible": "model.iconcustomcolor == 'true'"
		},
		{
			"type": "material-range",
			"placeholder": "iconsize",
			"label": "Icon Size",
			"model": "iconsize",
			"min": 0,
			"max": 150
		},
		{
			"type": "collection",
			"multifield": true,
			"fieldLabel": ["icon", "value"],
			"fields": [
				{
					"type": "iconbrowser",
					"placeholder": "icon",
					"label": "Icon Chooser",
					"model": "icon",
					"hint": "Select an icon.",
					"required": true,
					"validator": "required",
					"families": ["material", "font awesome"]
				},
				{
					"type": "pathbrowser",
					"browserRoot": "/content/themeclean/pages",
					"placeholder": "url",
					"label": "Icon Url",
					"model": "url"
				}
			],
			"placeholder": "icons",
			"label": "Icons",
			"model": "icons"
		}
	]
}
