      </actions>
      -->
      <edit jcr:primaryType="nt:unstructured" sling:resourceType="admin/components/objectview">

      </edit>
    </explorer>

    <jsonview jcr:primaryType="nt:unstructured"
      sling:resourceType="admin/components/debugger" dataFrom="/"/>

