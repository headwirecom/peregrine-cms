<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="per:Page"
>
    <jcr:content
            jcr:primaryType="per:PageContent"
            sling:resourceType="admin/components/toolingpage"
            jcr:title="home"
            jcr:description="admin base Content Root"
            siteCSS="[/etc/felibs/admin/dependencies/material-design-icons/material-icons.css,/etc/felibs/materialize/materialize.css,/etc/felibs/admin/dependencies/quill/quill.snow.css]"
            siteJS="[/etc/felibs/admin/dependencies/jquery/jquery.js,/etc/felibs/admin/dependencies/materialize-css/js/materialize.min.js,/etc/felibs/admin/dependencies/quill/quill.js]"
    >
        <nav jcr:primaryType="nt:unstructured"
             sling:resourceType="admin/components/nav"/>

        <content jcr:primaryType="nt:unstructured"
                 sling:resourceType="pagerender/vue/structure/container">

            <row jcr:primaryType="nt:unstructured"
                 sling:resourceType="admin/components/row">

                <col1 jcr:primaryType="nt:unstructured"
                      sling:resourceType="admin/components/col"
                      classes="col"
                >

                    <text jcr:primaryType="nt:unstructured"
                           sling:resourceType="pagerender/vue/components/base"
                           text="peregrine-cms is a head optional, api first cms built on top of apache sling and apache jackrabbit"/>
                </col1>
            </row>
            <iconlist jcr:primaryType="nt:unstructured"
                      sling:resourceType="admin/components/iconlist"
                      source="/admin/tools"/>
        </content>

        <jsonview jcr:primaryType="nt:unstructured"
                  sling:resourceType="admin/components/debugger" dataFrom="/"/>
        <tour jcr:primaryType="nt:unstructured"
              sling:resourceType="admin/components/tour">
            <item1 jcr:primaryType="nt:unstructured" locator="/jcr:content/content/iconlist" text="select one of the main pillars of peregrine cms to start exploring"/>
            <item2 jcr:primaryType="nt:unstructured" locator="/content/admin/tools/pages" text="create and manage pages for your site"/>
            <item3 jcr:primaryType="nt:unstructured" locator="/content/admin/tools/assets" text="create and manage assets for your site"/>
            <item4 jcr:primaryType="nt:unstructured" locator="/content/admin/tools/objects" text="create and manage objects for your site"/>
            <item5 jcr:primaryType="nt:unstructured" locator="/content/admin/tools/templates" text="create and manage templates for your site"/>
            <item6 jcr:primaryType="nt:unstructured" locator="/jcr:content/nav" text="primary navigation to navigate between screens, access to help and logout"/>
            <item7 jcr:primaryType="nt:unstructured" locator="/jcr:content/nav" text="return to this screen" selector=".peregrine-logo"/>
            <item8 jcr:primaryType="nt:unstructured" locator="/jcr:content/nav" text="logout" selector="li:nth-child(1)"/>
        </tour>

    </jcr:content>
</jcr:root>
