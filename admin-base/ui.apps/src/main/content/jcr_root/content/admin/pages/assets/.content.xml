      </actions>
      -->
      <edit jcr:primaryType="nt:unstructured" sling:resourceType="admin/components/assetview"/>

    </explorer>

    <jsonview jcr:primaryType="nt:unstructured"
      sling:resourceType="admin/components/debugger" dataFrom="/"/>

