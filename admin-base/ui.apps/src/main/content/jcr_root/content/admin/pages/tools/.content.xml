<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
  xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
  jcr:primaryType="nt:unstructured"
  sling:resourceType="pagerendervue/structure/container">

  <pages jcr:primaryType="nt:unstructured" jcr:title="Pages"
    sling:resourceType="admin/components/iconaction"
    jcr:description="edit and manage the pages of this Peregrine instance"
    action="/content/admin/pages/pages">
    <experiences jcr:primaryType="nt:unstructured">
      <de jcr:primaryType="nt:unstructured" experiences="[lang:de]" title="Seiten"
        description="Bearbeiten von Seiten dieser Instanz von Peregrine-CMS"/>
    </experiences>
  </pages>

  <assets jcr:primaryType="nt:unstructured" jcr:title="Assets"
    sling:resourceType="admin/components/iconaction"
    jcr:description="peregrine asset management"
    action="/content/admin/pages/assets">
    <experiences jcr:primaryType="nt:unstructured">
      <de jcr:primaryType="nt:unstructured" experiences="[lang:de]" title="Assets"
        description="Peregrine Assets Verwaltung"/>
    </experiences>
  </assets>

  <objects jcr:primaryType="nt:unstructured" jcr:title="Objects"
    sling:resourceType="admin/components/iconaction"
    jcr:description="edit and manage objects (common content data for all pages)"
    action="/content/admin/pages/objects">
    <experiences jcr:primaryType="nt:unstructured">
      <de jcr:primaryType="nt:unstructured" experiences="[lang:de]" title="Objekte"
        description="Objekte bearbeiten und verwalten (gemeinsamer Inhalt fÃ¼r alle Seiten)"/>
    </experiences>
  </objects>

  <templates jcr:primaryType="nt:unstructured" jcr:title="Templates"
    sling:resourceType="admin/components/iconaction"
    jcr:description="edit and manage templates"
    action="/content/admin/pages/templates">
    <experiences jcr:primaryType="nt:unstructured">
      <de jcr:primaryType="nt:unstructured" experiences="[lang:de]" title="Template"
        description="Templates bearbeiten und verwalten"/>
    </experiences>
  </templates>

  <config jcr:primaryType="nt:unstructured" jcr:title="Tools"
    sling:resourceType="admin/components/iconaction"
    jcr:description="Dig deeper into Peregrine with these tools"
    action="/content/admin/pages/config">
    <experiences jcr:primaryType="nt:unstructured">
      <de jcr:primaryType="nt:unstructured" experiences="[lang:de]" title="Hillfsmittel"
        description="Vertiefte Ansicht von Peregrine"/>
    </experiences>
  </config>

  <docs jcr:primaryType="nt:unstructured" jcr:title="Documentation"
    sling:resourceType="admin/components/iconaction"
    jcr:description="view the peregrine documentation"
    action="/content/admin/pages/docs">
    <experiences jcr:primaryType="nt:unstructured">
      <de jcr:primaryType="nt:unstructured" experiences="[lang:de]" title="Dokumentation"
        description="Peregrine Dokumentation anschauen"/>
    </experiences>
  </docs>

</jcr:root>
